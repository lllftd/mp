{
  /* 设置页面路径及窗口表现 */
  "pages": [
    // pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/index/index",
      "style": {
        // 页面配置 https://developers.weixin.qq.com/miniprogram/dev/reference/configuration/page.html
        "navigationBarTitleText": "推荐", // 导航栏标题
        "navigationStyle": "custom",
        "enablePullDownRefresh": false, // 开启下拉刷新
        "backgroundColor": "#fdfeff",
        "backgroundColorTop": "#fdfeff"
      }
    },
    {
      "path": "pages/community/index",
      "style": {
        // 页面配置 https://developers.weixin.qq.com/miniprogram/dev/reference/configuration/page.html
        "navigationBarTitleText": "社群", // 导航栏标题
        "navigationStyle": "custom",
        "enablePullDownRefresh": false, // 开启下拉刷新
        "backgroundColor": "#fdfeff",
        "backgroundColorTop": "#fdfeff"
      }
    },
    {
      "path": "pages/activity/index",
      "style": {
        // 页面配置 https://developers.weixin.qq.com/miniprogram/dev/reference/configuration/page.html
        "navigationBarTitleText": "活动页面", // 导航栏标题
        // "navigationStyle": "custom",
        "enablePullDownRefresh": false, // 开启下拉刷新
        "backgroundColor": "#fdfeff",
        "backgroundColorTop": "#fdfeff"
      }
    },
    {
      "path": "pages/mine/index",
      "style": {
        // 页面配置 https://developers.weixin.qq.com/miniprogram/dev/reference/configuration/page.html
        "navigationBarTitleText": "我的", // 导航栏标题
        "navigationStyle": "custom",
        "enablePullDownRefresh": false, // 开启下拉刷新
        "backgroundColor": "#fdfeff",
        "backgroundColorTop": "#fdfeff"
      }
    },
    {
      "path": "pages/login/index",
      "style": {
        "navigationBarTitleText": "登录",
        "navigationStyle": "custom"
      }
    }
  ],
  "subPackages": [
    {
      "root": "packages",
      "pages": [
        {
          "path": "choose_tag/index",
          "style": {
            "navigationBarTitleText": "兴趣标签"
          }
        },
        {
          "path": "food_detail/index",
          "style": {
            "navigationBarTitleText": "详情"
          }
        },
        {
          "path": "my_like/index",
          "style": {
            "navigationBarTitleText": "我喜欢的"
          }
        },
        {
          "path": "my_collect/index",
          "style": {
            "navigationBarTitleText": "我的收藏"
          }
        },
        {
          "path": "my_history/index",
          "style": {
            "navigationBarTitleText": "历史浏览"
          }
        },
        {
          "path": "my_activity/index",
          "style": {
            "navigationBarTitleText": "参与的活动"
          }
        },
        {
          "path": "my_notice/index",
          "style": {
            "navigationBarTitleText": "消息页面"
          }
        },
        {
          "path": "search/index",
          "style": {
            "navigationBarTitleText": "搜索"
          }
        },
        {
          "path": "activity_detail/index",
          "style": {
            "navigationBarTitleText": "活动详情"
          }
        }
      ]
    }
  ],
  "preloadRule": {},
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "", // 导航栏标题文字内容
    "navigationBarBackgroundColor": "#FFFFFF", // 导航栏背景颜色
    "backgroundColor": "#F8F8F8", // 窗口的背景色 下拉会出来
    "usingComponents": {} // 组件引入-全局
  },
  /* 设置底部 tab 的表现 */
  "tabBar": {
    "custom": true, // true为自定义tabBar https://developers.weixin.qq.com/miniprogram/dev/framework/ability/custom-tabbar.html
    "list": [
      {
        "pagePath": "pages/index/index", // 页面路径，必须在 pages 中先定义
        "text": "推荐" // tab 上按钮文字
      },
      {
        "pagePath": "pages/community/index", // 页面路径，必须在 pages 中先定义
        "text": "社群" // tab 上按钮文字
      },
      {
        "pagePath": "pages/activity/index", // 页面路径，必须在 pages 中先定义
        "text": "活动" // tab 上按钮文字
      },
      {
        "pagePath": "pages/mine/index", // 页面路径，必须在 pages 中先定义
        "text": "我的" // tab 上按钮文字
      }
    ],
    "midButton": {}
  },
  "usingComponents": {
    "custom-tab-bar": "/components/CusTabBar/index"
  },
  /* 组件自动引入规则 */
  "easycom": {
    "autoscan": true, // 是否自动扫描组件
    // 自定义扫描规则
    "custom": {
      "^u--(.*)": "uview-plus/components/u-$1/u-$1.vue",
      "^up-(.*)": "uview-plus/components/u-$1/u-$1.vue",
      "^u-([^-].*)": "uview-plus/components/u-$1/u-$1.vue",
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
    }
  }
}